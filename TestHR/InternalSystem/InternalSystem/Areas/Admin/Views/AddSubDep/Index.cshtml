@model DeptAndSubDeptVM

@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper" style="padding:0px 0px 0px 250px">
    <div class="container-fluid">
        <br>
        <div class="card">
            <div class="card-header">
                <p style="text-align: center;font-size: 20px; color: green">Alt şöbələrin siyahısı</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <a asp-area="Admin" asp-controller="AddSubDep" asp-action="Create" class="btn btn-success">Yeni alt şöbə əlavə et <i class=" fas fa-plus"></i></a>
                    </div>
                </div>
                <br><br>
                <div class="row">
                    <div class="col-md-12 mx-auto" id="departmentTableDiv">
                        <table style="color:blue" class="table table-hover table-responsive-md ">
                            <thead style="text-align: center" class="thead-dark ">
                                <tr>
                                    <th scope="col">Sıra №</th>
                                    <th scope="col">Alt şöbənin adı</th>
                                    <th scope="col">Şöbənin adı</th>
                                    <th scope="col">Şirkətin adı</th>
                                </tr>
                            </thead>

                            <tbody style="text-align: center">
                                @{ var count = 1; }
                                @if (Model.SubDepartments.Count() != 0)
                                {

                                    @foreach (var item in Model.SubDepartments)
                                    {
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.DepartmentToCompany.Department.Name</td>
                                            <td>@item.DepartmentToCompany.Company.Name</td>
                                        </tr>
                                        count++;

                                    } }
                                else
                                {
                                    <tr>
                                        <th scope="row">0</th>
                                        <td>Siyahı boşdur</td>
                                        <td>Siyahı boşdur</td>
                                        <td>Siyahı boşdur</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>


                </div>


            </div>
            @if (Model.SubDepartments.Count() != 0)
            {
                <div class="card-footer">
                    <a asp-area="Admin" asp-controller="AddSubDep" asp-action="AllSubDepartmant" class="btn btn-primary col-md-12">Bütün alt şöbələrin siyahısı</a>
                </div>     
            }
        </div>
    </div>
</div>


