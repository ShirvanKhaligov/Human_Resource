@model DeptAndSubDeptVM
@{
    ViewData["Title"] = "AllDepartmant";
}

<div class="content-wrapper" style="background: #f4f6f9; padding:0px 0px 0px 250px">
    <div class="">
        <div class="card All_Index_View_Change_Card">
            <div class="row">
                <div class="modal" tabindex="-1" id="confirmationModalForAll" role="dialog">
                    <input type="hidden" id="hiddenModal" name="name" value="" />
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 style="color:black;font-size:1rem;" class="modal-title">Məlumatı sil</h5>
                                <button type="button" onclick="closeConfirmationIdDepartmentForAll()" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" style="padding-bottom: 0;">
                                <p style="color:#2590d3 !important;;font-size: 1.3rem;">Məlumatı silməyə əminsinizmi?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" onclick="modalDepartmentDelete($('#hiddenModal').val())" class="btn btn-secondary" data-dismiss="modal">Bəli</button>
                                <button type="button" onclick="closeConfirmationIdDepartmentForAll()" id="confirmationModalForAll" class="btn btn-primary">Xeyr</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mx-auto" id="departmentTableDiv">
                    <table style="color:blue" class="table table-hover table-responsive-md ">
                        <thead style="text-align: center" class="All_Index_View_Change_Thead">
                            <tr class="All_Index_View_Change_Tr">
                                <th scope="col">Sıra №</th>
                                <th scope="col">Şöbənin adı</th>
                                <th scope="col">Şirkətin adı</th>
                                <th scope="col">Redaktə et:</th>
                            </tr>
                        </thead>
                        <tbody style="text-align: center" class="All_Index_View_Change_Tbody">
                            @{ var count = 1; }
                            @if (Model.Departments.Count() != 0)
                            {
                                @foreach (var item in Model.DepartmentToCompanies)
                                {
                                    <tr>
                                        <th scope="row">@count</th>
                                        @if (item.Department.Name.Length > 35)
                                        {
                                            <td>@(item.Department.Name.Substring(0,35)+"...")</td>
                                        }
                                        else
                                        {
                                            <td>@item.Department.Name</td>
                                        }
                                        @if (item.Company.Name.Length > 20)
                                        {
                                            <td>@(item.Company.Name.Substring(0,20)+"...")</td>
                                        }
                                        else
                                        {
                                            <td>@item.Company.Name</td>
                                        }
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" title="Dəyiş"> <i class="fas fa-edit"></i></a>
                                            <a onclick="confirmationIdDepartmentForAll(@item.Department.Id)" class="btn btn-danger" title="Sil"> <i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    count++;
                                } }
                            else
                            {
                                <tr>
                                    <th scope="row">0</th>
                                    <td>Siyahı boşdur</td>
                                    <td>Siyahı boşdur</td>
                                    <td>Siyahı boşdur</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-area="Admin" asp-controller="AddDepartmant" asp-action="Index" class="btn All_Index_View_Change_Cart_Footer_A col-md-12">Geri</a>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function modalDepartmentDelete(id) {
            $.ajax({
                type: "post",
                url:"@Url.Action("Delete","AddDepartmant")",
                data: { DepartmentId:id},
                success: function (res) {
                    $("#confirmationModalForAll").hide();
                    $("#departmentTableDiv").html(res);
                },
                error: function (res) {
                    console.error(res)
                }
            });
        }

        function confirmationIdDepartmentForAll(id) {
            $("#confirmationModalForAll").show();
            $("#hiddenModal").val(id)

        };

        function closeConfirmationIdDepartmentForAll() {
            $("#confirmationModalForAll").hide();
        }
    </script>
}
