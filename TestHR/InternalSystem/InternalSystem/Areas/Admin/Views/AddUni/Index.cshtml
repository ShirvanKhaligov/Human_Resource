@model IEnumerable<EducationTypeToUnivercity>

@{
   ViewData["Title"] = "Index";
}

    <div class="content-wrapper" style="padding:0px 0px 0px 250px">
        <div class="container-fluid">
            <br>
            <div class="card">
                <div class="card-header">
                    <p style="text-align: center;font-size: 20px;color: green">Universitetlərin siyahısı</p>
                </div>

                <div class="card-body">


                    <div class="row">
                        <div class="col-md-12">
                            <a asp-area="Admin" asp-controller="AddUni" asp-action="Create" class="newCommand btn btn-success ">Yeni Universitet <i class=" fas fa-plus"></i></a>
                        </div>
                    </div>
                    <br><br>
                    <div class="row">
                        <div class="col-md-12" id="tableDiv">
                            <table class="table table-hover table-responsive-md ">
                                <thead style="text-align: center" class="thead-dark ">
                                    <tr>
                                        <th scope="col">Sıra№</th>
                                        <th scope="col">Universitetin adı</th>
                                        <th scope="col">Təhsilinin növü</th>
                                    </tr>
                                </thead>
                                <tbody style="text-align: center;color: blue">
                                    @{ var count = 1; }
                                    @if (Model.Count() != 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Universities.Name</td>
                                                <td>@item.EducationType.Name</td>
                                            </tr>
                                            count++;
                                        }
                                    }
                                    else
                                    {
                                        <tr class="text-danger text-bold">
                                            <th scope="row">0</th>
                                            <td>Boş</td>
                                            <td>Boş</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                @if (Model.Count() != 0)
                {
                    <div class="card-footer">
                        <a asp-area="Admin" asp-controller="AddUni" asp-action="AllUniversities" class="btn btn-primary col-md-12">Bütün universitetlərin siyahısı</a>
                    </div>      }

            </div>
        </div>
        <!--content-wrapper-->
    </div>
