@model CompanyVM
@{
    ViewData["Title"] = "AllCompanies";
}

<div style="background-color: white" class="page-wrapper">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <p style="color: green;text-align: center;font-size: 25px">Şirkətlərin siyahısı</p>
            </div>
            <div class="card-body" style="overflow-x:scroll">
                <div class="row">
                    <div class="col-md-12" id="CompanyTableDiv">
                        <table style="width:1500px" class="table table-bordered table-responsive-md  ">
                            <thead class=" table-dark text-center">
                                <tr>
                                    <th scope="col">Sıra №</th>
                                    <th scope="col">Şəkil</th>
                                    <th scope="col">Şirkətin adı</th>
                                    <th scope="col">VÖEN</th>
                                    <th scope="col">Qeydiyyat nömrəsi</th>
                                    <th scope="col">Ünvan</th>
                                    <th scope="col">İnternet səhifəsi</th>
                                    <th scope="col">Poçt ünvanı</th>
                                    <th scope="col">Şəhər</th>
                                    <th scope="col">Ölkə</th>
                                    <th scope="col">Redaktə et</th>
                                </tr>
                            </thead>
                            <tbody class="table-hover">
                                @if (Model.Companies.Count() != 0)
                                {
                                    int count = 1;
                                    @foreach (var item in Model.Companies)
                                    {
                                        <tr>
                                            <th scope="row">@count</th>
                                            <th>
                                                @if (item.Image != null)
                                                {
                                                    <img src="~/allUserImg/@item.Image" style="width:100px" />
                                                }
                                            </th>
                                            <th>@item.Name</th>
                                            <td>@item.TaxId</td>
                                            <td>@item.RegistrationNumber</td>
                                            <td>@item.Address</td>
                                            <td><a target="_blank" href="https://@item.Website">@item.Website</a></td>
                                            <td>@item.ZipCode</td>
                                            <td>@item.City.Name</td>
                                            <td>@item.City.Countries.Name</td>
                                            <th class="text-white">
                                                <div class="d-flex w-100 justify-content-center">
                                                    <a asp-action="Edit" asp-controller="Company" asp-route-Id="@item.Id" class="btn btn-primary" title="Dəyiş"> <i class="fas fa-edit"></i></a>
                                                    <a onclick="confirmationIdForCompany(@item.Id)" class="btn btn-danger ml-1" title="Sil"> <i class="fas fa-trash"></i></a>
                                                </div>
                                            </th>
                                        </tr>
                                        count++;
                                    }
                                }
                                else
                                {
                                    <tr class="text-danger text-center">
                                        <th scope="row">0</th>
                                        <th>Boş</th>
                                        <th>Boş</th>
                                        <th>Boş</th>
                                        <th>Boş</th>
                                        <th>Boş</th>
                                        <th>Boş</th>
                                        <th>Boş</th>
                                        <th>Boş</th>
                                        <th>Boş</th>
                                        <th>Boş</th>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-primary col-md-12">Geri</a>
            </div>
        </div>
    </div>

</div>
<section class="modaDiv">
    <div class="modal text-white" tabindex="-1" role="dialog" id="confirmationModalForCompany">
        <input type="hidden" id="hiddenCompanyId" value="" />
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">Silməyə əminsiniz?</h5>
                    <button type="button" class="close" data-dismiss="modal" onclick="closeConfirmationIdForCompany()" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <a onclick="deleteUniversityInAllCompanies($('#hiddenCompanyId').val())" class="btn btn-primary">Sil</a>
                    <a onclick="closeConfirmationIdForCompany()" class="btn btn-secondary" data-dismiss="modal">Ləvğ et</a>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script>
                    /////////////////
        function deleteUniversityInAllCompanies(Id) {
            console.log("salam salam")
            $.ajax({
                type: 'post',
                url: '@Url.Action("DeleteCompany", "Company")',
                data: { ConpanyId: Id },
                success: function (response) {
                    $("#CompanyTableDiv").html(response)
                    $("#confirmationModalForCompany").hide()
                },
                error: function (response) {
                    console.error(response)
                }
            })
        }
        //////////////
        //////////////open modul
        function confirmationIdForCompany(Id) {
            $("#confirmationModalForCompany").show()
            $("#hiddenCompanyId").val(Id)
        }
        //close modul//
        function closeConfirmationIdForCompany() {
            $("#confirmationModalForCompany").hide()
        }
        /////////////
    </script>
}

