@model IEnumerable<MessageForEmployee>
@{
    ViewData["Title"] = "Index";
}





<div class="content-wrapper">
    <div class="col-md-12">
        <div>
            <div>
                <table class="table custom-table mb-0">
                    <thead>
                        <tr>
                            <th>Sıra №</th>
                            <th>Admin</th>
                            <th>Şəkil</th>

                            <th>Məzmun</th>
                            <th>Vaxt</th>
                           
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.Count() != 0)
                        {
                            int count = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Emplooyee.FirstName @item.Emplooyee.Lastname</td>
                                    <td><img style="width:100px" src="~/allUserImg/@item.Image" > </td>
                                    @if (item.Description.Length > 60)
                                    {
                                        <td>
                                            @Html.Raw(item.Description.Substring(0, 40) + "...")
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.Raw(item.Description)
                                        </td>

                                    }
                                    <td>@item.TimeExecution.ToString("dd/MM/yyyy")</td>
                                </tr>
                                count++;
                            }

                        }
                        else
                        {
                            <tr>
                                <td>Boş</td>
                                <td>Boş</td>
                                <td>Boş</td>
                                <td>Boş</td>
                                <td>Boş</td>
                                <td>Boş</td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
 