@model EXPLANANTIONVM

@{
    ViewData["Title"] = "CreateExplanation";
}


<style>


    .btn-success {
        background-color: #f6822d !important;
        border-color: #f6822d !important;
    }

    .btn-primary {
        background-color: #2590d3 !important;
        border-color: #2590d3 !important;
    }

    .btn-warning {
        background-color: #2590d3 !important;
        border-color: #2590d3 !important;
    }

    .btn-danger {
        background-color: #2590d3 !important;
        border-color: #2590d3 !important;
    }
</style>


 
<div class="content-wrapper">
    <div class="col-md-12">
        <div>
            <div class="card-body">
                @if (ViewData["fillAllInputs"] != null)
                {
                    <span class="text-danger text-bold" style="font-size:15px;">@ViewData["fillAllInputs"]</span>}
                <span asp-validation-for="PermissionTypeName" class="text-danger text-bold" style="font-size:14px;"></span>

                <div class="col-md-12">
                    <a data-toggle="collapse" href="#myPermission" role="button" aria-expanded="false" aria-controls="myPermission" class="btn btn-success" style="color:white;">
                        <i class="fa fa-plus-circle"
                           aria-hidden="true"></i>
                        Izahat
                    </a>

                    <div class="collapse" id="myPermission">
                        <br><br>
                        <form method="post">
                            <div class="row">
                                <div class="col-md-12 mx-auto">
                                    <div class="form-group row ml-md-4">
                                        <label asp-for="PermissionTypeName" class="col-md-2" style="color:black;">İzahatin növü:</label>
                                        <div class="col-md-5">
                                            <select style="padding: 0px" class="form-control input-height" asp-for="PermissionTypeName"
                                                    id="typePermissionn">
                                                <option selected disabled>Seçin</option>
                                                @foreach (var pType in Model.PermissionTypes)
                                                {
                                                    <option value="@pType.Name">@pType.Name</option>
                                                }

                                            </select>
                                            <span asp-validation-for="PermissionTypeName" class="text-danger text-bold" style="font-size:14px;"></span>
                                        </div>
                                    </div>

                                    @* Saatliq basla *@
                                    <div id="showOne" class="myDiv">
                                        <div class="form-group row ml-md-4">
                                            <label class="col-md-2" for="fromDate" style="color:black;">Hansı tarixdə:</label>
                                            <div class="col-md-5">
                                                <input class="form-control input-height" required asp-for="FromDate" type="date">
                                            </div>
                                        </div>
                                        <div class="form-group row ml-md-4">
                                            @*<div class="row">*@
                                            <label class="col-md-2" asp-for="FromDateForHour" style="color:black;">Saatdan:</label>
                                            <div class="col-md-2">
                                                <input class="form-control input-height" asp-for="FromDateForHour" type="time">

                                            </div>
                                            <label class="col-md-1" asp-for="ToDateForHour" style="color:black;">Saata:</label>
                                            <div class="col-md-2">
                                                <input class="form-control input-height" asp-for="ToDateForHour" type="time">

                                            </div>

                                        </div>
                                        <div class="form-group row ml-md-4">
                                            <label class="col-md-2" asp-for="ReasonOne" style="color:black;">Səbəb</label>
                                            <div class="col-md-5">
                                                <select style="padding: 0px" class="form-control input-height" asp-for="ReasonOne"
                                                        id="typePermissionn">
                                                    <option selected disabled>Seçin</option>
                                                    <option>Şəxsi</option>
                                                    <option>Tıxac</option>
                                                    <option>Ailəvi</option>
                                                    <option>Digər</option>

                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row ml-md-4">
                                            <label class="col-md-2" asp-for="Description" style="color:black;">Şərh </label>
                                            <div class="col-md-5">
                                                <textarea class="form-control" asp-for="Description" rows="3" style="resize:none;">
                                                    </textarea>

                                            </div>
                                        </div>
                                    </div>

                                    @* Saatliq son *@


                                    @* gunluk basla *@
                                    <div id="showTwo" class="myDiv">
                                        <div class="form-group row ml-md-4">
                                            <label class="col-md-2" asp-for="FromDateForDay" style="color:black;">Hansı tarixdən:</label>
                                            <div class="col-md-5">
                                                <input class="form-control input-height" asp-for="FromDateForDay" type="date">
                                            </div>
                                        </div>
                                        <div class="form-group row ml-md-4">
                                            <label class="col-md-2" asp-for="ToDateForDay" style="color:black;">Hansı tarixədək:</label>
                                            <div class="col-md-5">
                                                <input class="form-control input-height" asp-for="ToDateForDay" type="date">
                                            </div>
                                        </div>
                                        <div class="form-group row ml-md-4">
                                            <label asp-for="ReasonOne" class="col-md-2" style="color:black;">Səbəb:</label>
                                            <div class="col-md-5">
                                                <select style="padding: 0px" class="form-control input-height" asp-for="ReasonOne"
                                                        id="typePermissionn">
                                                    <option selected disabled>Seçin</option>
                                                    <option>Şəxsi</option>
                                                    <option>Tıxac</option>
                                                    <option>Ailəvi</option>
                                                    <option>Digər</option>

                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row ml-md-4">
                                            <label asp-for="Description2" class="col-md-2" style="color:black;">Izah:</label>
                                            <div class="col-md-5">
                                                <textarea class="form-control" asp-for="Description2" rows="3" style="resize:none;">
                                                             </textarea>
                                            </div>
                                        </div>

                                    </div>

                                    @* Gunluk Son *@
                                    <div class="row ">
                                        <div class="col-md-4 mx-auto text-center">

                                            <button style="width: 300px;font-size: 15px" class="btn btn-success" type="submit">
                                                Göndər
                                            </button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!--ddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd-->
                </div>
            </div>
        </div>
        <div >
            <div >
                <table class="table custom-table mb-0">
                    <thead>
                        <tr>
                            <th>Sıra №</th>
                            <th>Soyadı,Adı,Ata adı</th>
                            <th>İzahatın növü</th>
                            <th>Tarixdən</th>
                            <th>Tarixədək</th>
                            <th>Səbəb</th>
                            <th>Şərh</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Explanations != null)
                        {
                            int count = 1;
                            @foreach (var item in Model.Explanations)
                            {
                                <tr>
                                    <th>@count</th>
                                    <td>@item.Emplooyee.FirstName @item.Emplooyee.Lastname @item.Emplooyee.FatherName</td>
                                    <td>@item.Explanation.PermissionType.Name</td>
                                    <td>
                                        @if (item.Explanation.PermissionType.Name == "Günlük")
                                        {
                                            <p>@item.Explanation.FromDate.Day / @item.Explanation.FromDate.Month / @item.Explanation.FromDate.Year</p>

                                        }
                                        else
                                        {
                                            //saatliq
                                            @if (item.Explanation.FromDateForHour.Minute < 10 && item.Explanation.FromDateForHour.Minute > 0)
                                            {
                                                <span>
                                                    @item.Explanation.FromDateForHour.Hour :0@(item.Explanation.FromDateForHour.Minute)
                                                </span> }
                                            else
                                            {
                                                <span>
                                                    @item.Explanation.FromDateForHour.Hour : @item.Explanation.FromDateForHour.Minute
                                                </span>}
                                            <span>
                                                (@item.Explanation.FromDate.Day / @item.Explanation.FromDate.Month / @item.Explanation.FromDate.Year)
                                            </span>//saatliq
                                        }
                                    </td>
                                    <td>
                                        @if (item.Explanation.PermissionType.Name == "Günlük")
                                        {
                                            <p>@item.Explanation.ToDate.Day / @item.Explanation.ToDate.Month / @item.Explanation.ToDate.Year</p> }
                                        else
                                        {
                                            //saatliq
                                            @if (item.Explanation.ToDate.Minute < 10 && item.Explanation.ToDate.Minute > 0)
                                            {
                                                <span>
                                                    @item.Explanation.ToDate.Hour :0@(item.Explanation.ToDate.Minute)
                                                </span> }
                                            else
                                            {
                                                <span>
                                                    @item.Explanation.ToDate.Hour : @item.Explanation.ToDate.Minute
                                                </span>}
                                            <span>
                                                (@item.Explanation.FromDate.Day / @item.Explanation.FromDate.Month / @item.Explanation.FromDate.Year)
                                            </span>//saatliq
                                        }
                                    </td>
                                    @if (item.Explanation.Reason.Length > 25)
                                    {
                                        <td>@(item.Explanation.Reason.Substring(0,25)+"...")</td>
                                    }
                                    else
                                    {
                                        <td>@item.Explanation.Reason</td>
                                    }
                                    @if (item.Explanation.Description == null)
                                    {
                                        <td>Boşdur</td>
                                    }
                                    else if (item.Explanation.Description.Length >= 25)
                                    {
                                        <td>@(item.Explanation.Description.Substring(0,25)+"...")</td>
                                    }
                                    else
                                    {
                                        <td>@item.Explanation.Description</td>
                                    }

                                </tr>
                                count++;
                            } }
                        else
                        {
                            <tr>
                                <td>Boş</td>
                                <td>Boş</td>
                                <td>Boş</td>
                                <td>Boş</td>
                                <td>Boş</td>
                                <td>Boş</td>
                                <td>Boş</td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>

        </div>
    </div>
</div>

@section scripts{

    <script>


        $(document).ready(function () {
            $('#typePermissionn').on('change', function () {
                var demovalue = $(this).val();
                if (demovalue == "Saatlıq") {
                    $("#showOne").show();
                    $("#showTwo").hide();
                } else if (demovalue == "Günlük") {
                    $("#showOne").hide();
                    $("#showTwo").show();
                }

            });
        });

        $(function () {
            $('#dataAllSearc').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": false,
                "info": false,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
}