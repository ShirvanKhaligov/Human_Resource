
@{
    ViewData["Title"] = "EmailMessage";
}

<div class="content-wrapper" style="background: #e0e0e0 !important">
    <div class="col-md-12">
        <div style="background-color:#e0e0e0;">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark"></h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-area="Employee" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                                <li class="breadcrumb-item active">E-poçt</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <section class="content">
                <div class="row">
                    <div class="col-md-12 justify-content-end d-flex">
                        <a asp-controller="Email" asp-action="Inbox" class="btn btn-primary col-md-2 btn-block mb-3"><i class="fas fa-long-arrow-alt-left"></i> Geri</a>
                    </div>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-md-12">
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Yeni mesaj</h3>
                            </div>
                            <!-- /.card-header -->
                            <form asp-action="EmailMessage" method="post" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="form-group">
                                        <input class="form-control" value="@ViewBag.FromAddresses" placeholder="Kimdən:" disabled>
                                    </div>
                                    <div class="form-group"> 
                                        @if (ViewData["NullToAddress"] != null)
                                        {
                                            <input class="form-control" style="color: #721c24; background-color: #f8d7da; border-color: #f5c6cb;" name="ToAddresses" placeholder="Kimə:">
                                        }
                                        else
                                        {
                                            <input class="form-control" name="ToAddresses" placeholder="Kimə:">
                                        }
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" name="Subject" placeholder="Mövzu:">
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control" name="Content" rows="5" cols="7"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <div class="btn btn-default btn-file">
                                            <i class="fas fa-paperclip"></i> Fayl
                                            <input type="file" name="files" multiple="multiple">
                                        </div>
                                    </div>
                                </div>

                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <div class="float-right">
                                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>
                                    </div>
                                </div>
                            </form>

                            <!-- /.card-footer -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
</section>
        </div>
    </div>
</div>

