@model IEnumerable<InternalSystem.Areas.InternalHR.Models.MailRu.EmailMessage> 
@{
    ViewData["Title"] = "GetEmails";
}

<h2>mailler</h2>    >
<div class="content-wrapper">
 
        <div class="container-fluid">
            <div class="row">

                <p>
                    <a asp-action="Create">Yenisini duzelt</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Subject)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Content)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.SecMail)
                            </th>*@

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.Subject)
                                </td>*@
                                <td>
                                    @Html.Raw( item.Content)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>




            </div>
        </div>
 
</div>
