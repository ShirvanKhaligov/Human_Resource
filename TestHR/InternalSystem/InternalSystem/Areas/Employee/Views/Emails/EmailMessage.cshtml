
@{
    ViewData["Title"] = "EmailMessage";
}


<div class="content-wrapper" style="color: black; background-color: rgb(255, 255, 255);">
    <div class="container-fluid">

      


        <div class="row">
            <a asp-action="GetEmails" class="btn btn-danger pull-right">Get Emails</a>
        </div>
        <hr />
        <div class="row">
            <form asp-action="EmailMessage" method="post">
                <div class="form-group row">
                    <label for="txtFromAddresses" class="col-sm-2 col-form-label">From :</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="txtFromAddresses" name="FromAddresses" value="@ViewBag.FromAddresses" placeholder="Sender" required disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtToAddresses" class="col-sm-2 col-form-label">To :</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="txtToAddresses" name="ToAddresses" placeholder="Reciver" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtSubject" class="col-sm-2 col-form-label">Subject :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="txtSubject" name="Subject" placeholder="Subject" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtSubject" class="col-sm-2 col-form-label">Content :</label>
                    <div class="col-sm-8">
                        <textarea name="Content" id="txtContent" class="form-control" required></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <span> @ViewBag.Result </span>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>




