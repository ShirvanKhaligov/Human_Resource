@model AppUser
@{
    ViewData["Title"] = "Delete";
}

<div class="page-wrapper">
    <div class="container-fluid bg-white">
        <div style="margin-top: 30px"></div>
       
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-8 ml-md-5">
                    <div class="form-group row ">
                        <div class="col-md-2">
                            <label asp-for="@Model.Companies.Name" class="label-font" for="name">Şirkətin adı</label>
                        </div>
                        <div class="col-md-5">
                            <input readonly asp-for="@Model.Companies.Name" id="name" class="form-control input-height"
                                   type="text">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="col-md-2">
                            <label asp-for="@Model.Name" class="label-font" for="name"> Adı</label>
                        </div>
                        <div class="col-md-5">
                            <input readonly asp-for="@Model.Name" id="name" class="form-control input-height"
                                   type="text">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="col-md-2">
                            <label asp-for="@Model.Surname" class="label-font" for="surname"> Soyadı</label>
                        </div>
                        <div class="col-md-5">
                            <input readonly asp-for="@Model.Surname" id="surname" class="form-control input-height"
                                   type="text">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="col-md-2">
                            <label asp-for="@Model.FatherName" class="label-font" for="fatherName"> Ata adı</label>
                        </div>
                        <div class="col-md-5">
                            <input readonly asp-for="@Model.FatherName" id="fatherName" class="form-control input-height"
                                   type="text">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="col-md-2">
                            <label asp-for="@Model.PhoneNumber" class="label-font" for="mobileNumber">Mobil nömrə</label>
                        </div>
                        <div class="col-md-5">
                            <input readonly asp-for="@Model.PhoneNumber" id="mobileNumber" class="form-control input-height"
                                   type="text">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="col-md-2">
                            <label asp-for="@Model.UserName" class="label-font" for="username">İstifadəçi adı</label>
                        </div>
                        <div class="col-md-5">
                            <input readonly asp-for="@Model.UserName" id="username" class="form-control input-height"
                                   type="text">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="col-md-2">
                            <label asp-for="@Model.Email" class="label-font" for="email">Email ünvanı</label>
                        </div>
                        <div class="col-md-5">
                            <input readonly asp-for="@Model.Email" id="email" class="form-control input-height"
                                   type="text">
                        </div>
                    </div>

                </div>
            </div>
            <br><br>
            <div class="row">
                <button style="float:left;" class="btn btn-danger col-md-3 mx-auto" type="submit">
                    Sil
                </button>
            </div>
        </form>
    </div>
</div>

