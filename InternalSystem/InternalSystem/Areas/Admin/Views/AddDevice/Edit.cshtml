@model DevicesType
@{
    ViewData["Title"] = "Edit";
}

<div class="content-wrapper" style="background: white; padding:0px 0px 0px 250px">
    <div class="container-fluid">
        <br>
        <br>
        <a asp-area="InternalHR" asp-controller="Device" asp-action="Index" class="col-md-2 btn btn-primary "><i class="fas fa-long-arrow-alt-left"></i>  Geri</a>
        <div class=" ">
            <br><br>
            <form method="post">
                <div class="form-group row ml-md-4">
                    <label asp-for="@Model.Name" for="departmentName" class="col-md-2">Qurğunun adı:</label>
                    <div class="col-md-5">
                        <input asp-for="@Model.Name" type="text" style="height: 35px;" class="form-control" id="departmentName">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mx-auto">
                        <input style="width: 300px;" class="btn btn-success" type="submit" value="Yenilə" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!--content-wrapper-->
</div>


