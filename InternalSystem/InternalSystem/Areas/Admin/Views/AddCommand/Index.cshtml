@model AllModelVM
@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper" style="padding:0px 0px 0px 250px">
    <div class="">
        <div class="card All_Index_View_Change_Card">
            <div class="card-header All_Index_View_Change_Card_Header">
                <p class="All_Index_View_Change_P">Əmrlərin siyahısı</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <a asp-area="Admin" asp-controller="AddCommand" asp-action="Create" class="btn btn-success">Yeni əmr əlavə et <i class=" fas fa-plus"></i></a>
                    </div>
                </div>
                <br><br>
                <div class="row">
                    <div class="col-md-12 mx-auto" id="commandTableDiv">
                        <table class="table table-hover table-responsive-md">
                            <thead style="text-align: center;color:white" class="All_Index_View_Change_Thead">
                                <tr class="All_Index_View_Change_Tr">
                                    <th scope="col">Sıra №</th>
                                    <th scope="col">Əmrlərin adı</th>
                                </tr>
                            </thead>
                            <tbody style="text-align: center;" class="All_Index_View_Change_Tbody">
                                @{
                                    var count = 1;
                                }
                                @if (Model.Commands.Count() != 0)
                                {

                                    @foreach (var item in Model.Commands)
                                    {
                                        <tr>
                                            <th scope="row">@count</th>
                                            @if (item.Name.Length > 35)
                                            {
                                                <td>@(item.Name.Substring(0,35)+"...")</td>
                                            }
                                            else
                                            {
                                                <td>@item.Name</td>
                                            }
                                        </tr>
                                        count++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <th scope="row">Siyahı boşdur</th>
                                        <th scope="row">Siyahı boşdur</th>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @if (Model.Commands.Count() != 0)
            {
                <div class="card-footer">
                    <a asp-area="Admin" asp-controller="AddCommand" asp-action="AllComand" class="btn All_Index_View_Change_Cart_Footer_A col-md-12">Bütün şöbələrin siyahısı</a>
                </div>
            }
        </div>
    </div>
    <!--content-wrapper-->
</div>

