@model AllModelVM
@{
    ViewData["Title"] = "AllComand";
}

<div class="content-wrapper" style="background: #f4f6f9; padding:0px 0px 0px 250px">
    <div class="">
        <div class="card All_Index_View_Change_Card" style="padding:7px" ">
            <div class="row">
                <div class="modal" tabindex="-1" id="confirmationModalForAll" role="dialog">
                    <input type="hidden" id="hiddenModal" name="name" value="" />
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 style="color:black;font-size:1rem;" class="modal-title">Məlumatı sil</h5>
                                <button type="button" onclick="closeConfirmationIdCommandForAll()" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" style="padding-bottom: 0;">
                                <p style="color:#2590d3 !important;;font-size: 1.3rem;">Məlumatı silməyə əminsinizmi?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" onclick="modalCommandDelete($('#hiddenModal').val())" class="btn btn-secondary" data-dismiss="modal">Bəli</button>
                                <button type="button" onclick="closeConfirmationIdCommandForAll()" id="confirmationModalForAll" class="btn btn-primary">Xeyr</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mx-auto" id="commandTableDiv">
                    <table class="table table-hover table-responsive-md ">
                        <thead style="text-align: center" class="All_Index_View_Change_Thead">
                            <tr class="All_Index_View_Change_Tr">
                                <th scope="col">Sıra №</th>
                                <th scope="col">Şöbənin adı</th>
                                <th scope="col">Redaktə et:</th>
                            </tr>
                        </thead>
                        <tbody style="text-align: center" class="All_Index_View_Change_Tbody">
                            @{
                                var count = 1;
                            }
                            @if (Model.Commands.Count() != 0)
                            {

                                @foreach (var item in Model.Commands)
                                {
                                    <tr>
                                        <th scope="row">@count</th>
                                        @if (item.Name.Length > 35)
                                        {
                                            <td>@(item.Name.Substring(0,35)+"...")</td>
                                        }
                                        else
                                        {
                                            <td>@item.Name</td>
                                        }
                                        <td>
                                            <a href="/Admin/AddCommand/Edit/@item.Id" class="btn btn-primary" title="Dəyiş"><i class="fas fa-edit"></i></a>
                                            <a onclick="confirmationIdCommandForAll(@item.Id)" class="btn btn-danger" title="Sil"> <i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <th scope="row">Siyahı boşdur</th>
                                    <th scope="row">Siyahı boşdur</th>
                                    <td>Siyahı boşdur</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Admin/AddCommand/Index" class="btn All_Index_View_Change_Cart_Footer_A col-md-12">Geri</a>
            </div>

        </div>
    </div>
    <!--content-wrapper-->
</div>

@section scripts{
    <script>
        function modalCommandDelete(id) {
            $.ajax({
                type: "post",
                url:"@Url.Action("Delete","AddCommand")",
                data:{ ComandId:id},
                success: function (res) {
                    $("#confirmationModalForAll").hide();
                    $("#commandTableDiv").html(res);
                },
                error: function (res) {
                    console.error(res)
                }
            });
        }

        function confirmationIdCommandForAll(id) {
            $("#confirmationModalForAll").show();
            $("#hiddenModal").val(id)
        };

        function closeConfirmationIdCommandForAll() {
            $("#confirmationModalForAll").hide();
        }
    </script>
}

