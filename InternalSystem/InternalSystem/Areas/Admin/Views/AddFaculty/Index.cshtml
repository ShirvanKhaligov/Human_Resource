@model IEnumerable<UniFaculty>
@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper" style="padding:0px 0px 0px 250px">
    <div class="container-fluid">
        <br>
        <div class="card">
            <div class="card-header">
                <p style="text-align: center;font-size: 20px;color: green">Fakültələrin siyahısı</p>
            </div>

            <div class="card-body">

                <div class="row">
                    <div class="col-md-12">
                        <a asp-action="Create" asp-controller="AddFaculty" asp-area="Admin" class="newCommand btn btn-success ">Yeni Fakültə  <i class=" fas fa-plus"></i></a>
                    </div>
                </div>
                <br><br>
                <div class="row">
                    <div class="col-md-12" id="tableForFaculty">
                        <table class="table table-hover table-responsive-md ">
                            <thead style="text-align: center" class="thead-dark ">
                                <tr>
                                    <th scope="col"> Sıra№</th>
                                    <th scope="col">Fakültənin adı</th>
                                    <th scope="col">Universitetin adı</th>
                                </tr>
                            </thead>
                            <tbody style="text-align: center; color:blue">
                                @if (Model.Count() != 0)
                                {
                                    int count = 1;

                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.EducationTypeToUniversity.Universities.Name (@item.EducationTypeToUniversity.EducationType.Name)</td>
                                        </tr>
                                        count++;
                                    }
                                }
                                else
                                {
                                    <tr class="text-danger text-bold">
                                        <th scope="row">0</th>
                                        <td>Boş</td>
                                        <td>Boş</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @if (Model.Count() != 0)
            {
                <div class="card-footer">
                    <a asp-area="Admin" asp-controller="AddFaculty" asp-action="AllFaculties" class="btn btn-primary col-md-12">Bütün fakultələrin siyahısı</a>
                </div>}

        </div>
    </div>
    <!--content-wrapper-->
</div>

