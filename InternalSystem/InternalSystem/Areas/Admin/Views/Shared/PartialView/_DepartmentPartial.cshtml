@model DeptAndSubDeptVM


    <table class="table table-hover table-responsive-md ">
        <thead style="text-align: center" class="All_Index_View_Change_Thead">
            <tr class="All_Index_View_Change_Tr">
                <th scope="col">Sıra №</th>
                <th scope="col">Şöbənin adı</th>
                <th scope="col">Şirkətin adı</th>
                <th scope="col">Redaktə et:</th>
            </tr>
        </thead>
        <tbody style="text-align: center" class="All_Index_View_Change_Tbody">
            @{
                var count = 1;
            }
            @if (Model.Departments.Count() != 0)
            {

                @foreach (var item in Model.DepartmentToCompanies)
                {
                    <tr>
                        <th scope="row">@count</th>
                        @if (item.Department.Name.Length > 35)
                        {
                            <td>@(item.Department.Name.Substring(0,35)+"...")</td>
                        }
                        else
                        {
                            <td>@item.Department.Name</td>
                        }
                        @if (item.Company.Name.Length > 20)
                        {
                            <td>@(item.Company.Name.Substring(0,20)+"...")</td>
                        }
                        else
                        {
                            <td>@item.Company.Name</td>
                        }
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" title="Dəyiş"> <i class="fas fa-edit"></i></a>
                            <a onclick="confirmationIdDepartmentForAll(@item.Id)" class="btn btn-danger" title="Sil"> <i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    count++;
                }

            }
            else
            {
                <tr>
                    <th scope="row">0</th>
                    <td>Siyahı boşdur</td>
                    <td>Siyahı boşdur</td>
                    <td>Siyahı boşdur</td>
                </tr>
            }

        </tbody>
    </table>
