@model IEnumerable<InternalSystem.Areas.InternalHR.Models.Quiz.Choice>

@{
    ViewData["Title"] = "Index";
}
<style>


    .btn-success {
        background-color: #2590d3 !important;
        border-color: #2590d3 !important;
    }

    .btn-primary {
        background-color: #2590d3 !important;
        border-color: #2590d3 !important;
    }

    .btn-warning {
        background-color: #2590d3 !important;
        border-color: #2590d3 !important;
    }

    .btn-danger {
        background-color: #2590d3 !important;
        border-color: #2590d3 !important;
    }
</style>
<h1>
    Create
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ChoiceText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsTrue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Question)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChoiceText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsTrue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Question.QuestionID)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ChoiceID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ChoiceID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ChoiceID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
