@model RecruitmentCandidateVM
@foreach (var educType in Model.EducationsToEmployees)
{
    <div>
        <div style="border:1px solid;color: black ">
            <div>
                <div class="form-group row ml-md-5 mt-3">
                    <div class="col-md-2">
                        <label for="educationType">Təhsilin dərəcəsi:</label>
                    </div>
                    <div class="col-sm-5">
                        <input type='text' value="@educType.Education.Profession.UniFaculty.EducationTypeToUniversity.EducationType.Name" readonly class="form-control" />
                    </div>
                    <div class='col-sm-4' style='text-align:end;'>
                       <button type='button' onclick='modalEducationDelete(@educType.Emplooyee.Id,@educType.Education.Id)' style='padding:6px 70px;' class='btn btn-danger'>Sil</button>
                        </div>
                </div>
            </div>
            <div class="line-item-property__field line-item-property__universityName">
                <div class="form-group row ml-md-5">
                    <div class="col-md-2">
                        <label for="universityName">Təhsil ocağının adı:</label>
                    </div>
                    <div class="col-sm-5">
                        <input type='text' value="@educType.Education.Profession.UniFaculty.EducationTypeToUniversity.Universities.Name" readonly class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="line-item-property__field line-item-property__enteringTime">
                        <div class="form-group row ml-md-5">
                            <div class="col-sm-7">
                                <label required for="enteringTime">Başlama tarixi:</label>
                            </div>
                            <div class="col-sm-5">
                                <input type='text' value="@educType.Education.EnteringTime" readonly class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 ">
                    <div class="line-item-property__field line-item-property__endTime">
                        <div class="form-group row  ml-md-5 ">
                            <div class="col-md-4">
                                <label required for="endTime">Bitmə tarixi:</label>
                            </div>
                            <div class="col-sm-5">
                                <input type='text' value="@educType.Education.FinishTime" readonly class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="line-item-property__field line-item-property__facultyName">
                <div class="form-group row ml-md-5">
                    <div class="col-md-2">
                        <label for="facultyName">Fakültə:</label>
                    </div>
                    <div class="col-sm-5">
                        <input type='text' value="@educType.Education.Profession.UniFaculty.Name" readonly class="form-control" />
                    </div>
                </div>
            </div>
            <div class="line-item-property__field line-item-property__specialtyName">
                <div class="form-group row ml-md-5">
                    <div class="col-md-2">
                        <label for="specialtyName">İxtisas:</label>
                    </div>
                    <div class="col-sm-5">
                        <input type='text' value="@educType.Education.Profession.Name" readonly class="form-control" />
                    </div>
                </div>
            </div>
            <div class='line-item-property__field line-item-property__AcceptHon'>
               <div class='form-group row ml-md-5'>
                 <div class='col-md-2'>
                   <label for='accepthoneyy'>Qəbul balı:</label>
                 </div>
                 <div class='col-sm-5'>
                    <input type='number' value="@educType.Education.AcceptHoney" readonly class="form-control input-height" />
                 </div>
               </div>
            </div>
            <br>
        </div><br><br>
    </div>
}