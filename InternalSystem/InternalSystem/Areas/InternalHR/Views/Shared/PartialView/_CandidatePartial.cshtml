@model IEnumerable<PhoneNumberToEmployee>
<table id="dataAllSearch" class="table table-hover table-responsive-md">
    <thead style="text-align: center" class="All_Index_View_Change_Thead">
        <tr class="All_Index_View_Change_Tr">
            <th scope="col">Sıra №</th>
            <th scope="col">Soyadı,Adı,Ata adı</th>
            <th scope="col"> Email</th>
            <th scope="col"> Mobil nömrə</th>
            <th scope="col"> Redaktə et</th>
            <th scope="col">Köhnə İş yerləri</th>

        </tr>
    </thead>
    <tbody style="text-align: center" class="All_Index_View_Change_Tbody">
        @if (Model.Count() != 0)
        {
            int count = 1;
            @foreach (var candidatesAndNumber in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@(candidatesAndNumber.Emplooyee.Lastname+" "+candidatesAndNumber.Emplooyee.FirstName+" "+candidatesAndNumber.Emplooyee.FatherName)</td>
                    @if (candidatesAndNumber.Emplooyee.Email.Length > 22)
                    {
                        <td>@(candidatesAndNumber.Emplooyee.Email.Substring(0,20)+"...")</td>
                    }
                    else
                    {
                        <td>@candidatesAndNumber.Emplooyee.Email</td>
                    }
                    <td>@candidatesAndNumber.PhoneNumber.PhoneNumber</td>
                    <td>
                        <a asp-area="InternalHR" asp-controller="Recruitment" asp-action="Create" asp-route-id="@candidatesAndNumber.Emplooyee.Id" class="btn btn-success">
                            İşə qəbul
                        </a>
                        <a asp-action="Editt" asp-controller="Practitioner" asp-route-id="@candidatesAndNumber.EmplooyeeID" class="btn btn-primary" title="Dəyiş"> <i class="fas fa-edit"></i></a>
                        <a onclick="confirmationDeleteForCandidate(@candidatesAndNumber.EmplooyeeID)" text-white class="btn btn-danger" title="Sil"> <i class="fas fa-trash"></i></a>
                    </td>
                    <td>
                        <a asp-action="AllLastWorks" asp-controller="Practitioner" asp-route-id="@candidatesAndNumber.EmplooyeeID" class="btn btn-warning" title=""><i class="fas fa-briefcase"></i></a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <th scope="row">0</th>
                <td>Boş</td>
                <td>Boş</td>
                <td>Boş</td>
                <td>Boş</td>
                <td>Boş</td>
            </tr>
        }


    </tbody>
</table>

<script>
    $(function () {
        $('#dataAllSearch').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": false,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>